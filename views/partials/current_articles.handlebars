<div id="articlesSection" class="col s9">
	<span id="articlesTitle"> CURRENT STORIES </span>
	<div id="articlesDiv">

		{{#if articles}}

			{{#each articles}}
				<div class="col s12" data_id="{{this.id}}">
				    <div class="card horizontal">
				        <div class="card-image">
				        	<img src="{{this.img}}">
				     	</div>
					    <div class="card-stacked">
							<div class="card-content">
								<p class="article-title">{{{this.title}}}</p>
								<p class="source">{{{this.source}}} -- </p>
								<span class="teaser">{{this.teaser}}</span>
							</div>
							<div id="test" class="card-action">
					    	    <a class="link blue-text text-darken-2" href="{{this.link}}" target="_blank">Read</a>
					    	    <a data-id="{{this.id}}" class="notes blue-text text-darken-2">Notes</a>
					    	    <a data-id="{{this.id}}" class="saveArticle blue-text text-darken-2">Save</a>
					    	    <a data-id="{{this.id}}" class="hideArticle blue-text text-darken-2">Hide</a>
					    	</div>
						</div>
					</div>
				</div>
			{{/each}}

		{{else}}

			<p class="text-center"> There are no current articles to display. </p>
			    
		{{/if}}

	</div>
</div>

		